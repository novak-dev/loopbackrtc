<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/small_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/signalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/create_offer" />


    <TextView
        android:id="@+id/callerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/caller" />

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/callerSurface"
        android:layout_width="352px"
        android:layout_height="240px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/small_margin"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/calleeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/callee" />

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/calleeSurface"
        android:layout_width="352px"
        android:layout_height="240px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        tools:ignore="PxUsage" />


</LinearLayout>